if 'webscan.360' in request.path
	raise_404()
html(lang="zh-cn")
	head
		load("/template/js/redirect.js")
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=Edge")
		meta(content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", name="viewport")
		meta(content="yes", name="apple-mobile-web-app-capable")
		meta(content="black-translucent", name="apple-mobile-web-app-status-bar-style")
		meta(content="telephone=no", name="format-detection")
		meta(name="description", content="")
		meta(name="keywords", content="")
		load("/template/js/redirect.js")
		load('fonts')
		link(rel='alternate', type='application/rss+xml', title='atom 1.0', href='/feed')
		load("jquery#2.1.4, /template/css/style.scss, /template/css/basic.css")

		if not has('favicon.icon')
			link(rel="shortcut icon", href="/template/favicon.ico")

		title
			block title
				site.title
	body
		#layout.pure-g-r
			.sidebar.pure-u
				#avatar
					a(href="/")
						img.logo(src="/template/avatar.jpg?width=240&height=240&fixed=true", alt=site.title, title="Homepage")
				h1.site_name
					a(href="/")= "{{site.title}}"
				#switch
					img(src="/template/img/menu.png", alt="menu icon")
				ul.nav
					if has('about.md')
						li= a_with_selected('/about.md', '关于' if lang=='zh_cn' else 'About')
					li= a_with_selected('/categories', '分类' if lang=='zh_cn' else 'Categories')
					if site.tags
						li= a_with_selected('/tag', '标签' if lang=='zh_cn' else 'Tags')
					li= a_with_selected('/archive', '归档' if lang=='zh_cn' else 'Archive')
					li#search
					 	a(href="#")= '搜索' if lang=='zh_cn' else 'Search'
				.search-bar
					input#search-bar(type="text", name="q", value=request.args.s, onkeyup="if (event.keyCode == 13) search();")
					a(href="javascript:search()")
						<i class="fa fa-search"></i>
				.infobar
					ul#bar.baro
						li.bar
							a(href='/post/code/github',title="Github") 
								i(class="fa fa-github")
						li.bar
							a(href='/feed',title='RSS') 
								i(class="fa fa-rss")
			.content_body.pure-u-1
				#main
					block content
				#go-top
					a(href="javascript:void(0);",onclick="document.body.scrollTop=0;document.documentElement.scrollTop=0;")
						i(class="fa fa-arrow-up")
				#footer
					| Powered by
					a(href='http://www.farbox.com') FarBox&nbsp;
					|
					span= "友情链接:"
		load("/template/js/scripts.js")